<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="Magenerds" translate="label" sortOrder="1000">
            <label>Magenerds</label>
        </tab>
        <section id="pagedesigner" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1"
                 showInStore="1">
            <label>Page Designer</label>
            <tab>Magenerds</tab>
            <resource>Magenerds_PageDesigner::config_pagedesigner</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>General</label>
                <field id="css_classes_column" translate="label comment" type="text" sortOrder="20" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>CSS Classes (for columns)</label>
                    <comment>Comma separated list of css classes the user can choose from in column settings dialog.</comment>
                </field>
                <field id="css_classes_row" translate="label comment" type="text" sortOrder="20" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>CSS Classes (for rows)</label>
                    <comment>Comma separated list of css classes the user can choose from in row settings dialog.</comment>
                </field>
            </group>
        </section>
    </system>
</config>
